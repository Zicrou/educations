<div id="<%= dom_id cour %>">
  <% if cour.thumbnail.attached? %>
    <p>
      <strong>Miniature:</strong>
      <%= image_tag cour.thumbnail.variant(:thumb) %>
    </p>
  <% end %>

  <p>
    <strong>Video:</strong>
    <%= video_tag url_for(cour.video), controls: true %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= cour.title %>
  </p>

  <p>
    <strong>Posted:</strong>
    <%= time_tag cour.created_at, "data-local": "time-ago" %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= cour.content %>
  </p>

</div>
