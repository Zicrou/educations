<div id="<%= dom_id cour %>" style="margin-top: -64px">
  <% if cour.video.attached? %>
    <div class="d-flex justify-content-center">
      <%= video_tag(url_for(cour.video), controls: true, width: "1300px") %>
    </div>
  <% else %>
    <p>
      <%= image_tag cour.thumbnail.variant(:thumb) %>
    </p>
  <% end %>
  <br>

  <p>
    <strong>Title:</strong>
    <%= cour.title %>
  </p>

  <p>
    <strong>Posted:</strong>
    <%= time_tag cour.created_at, "data-local": "time-ago" %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= cour.content %>
  </p>

</div>
