<%= form_with(model: cour) do |form| %>
  <% if cour.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(cour.errors.count, "error") %> prohibited this cour from being saved:</h2>

      <ul>
        <% cour.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group col-md-4">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class:"form-control" %>
  </div>
  <br>

  <div class="form-group col-md-4">
    <%= form.label :miniature, style: "display: block" %>
    <%= form.file_field :thumbnail, class:"form-control" %>
  </div>
  <br>

  <div class="form-group col-md-4">
    <%= form.label :video, style: "display: block" %>
    <%= form.file_field :video, class:"form-control" %>
  </div>
  <br>

  <div class="form-group">
    <%= form.label :content, style: "display: block;" %>
    <%= form.rich_text_area :content, class:"form-control" %>
  </div>
<br>
  <div class="form-group">
    <%= form.submit "Enregistrer", class:"btn btn-primary" %>
  </div>
<% end %>
